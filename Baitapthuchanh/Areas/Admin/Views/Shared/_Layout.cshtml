<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NgoDuyHoangLong</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Baitapthuchanh.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-success text-white text-center py-4">
        <h1>ADMIN</h1>
    </header>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container justify-content-center">

            <a class="navbar-brand" asp-area="" asp-controller="product" asp-action="Index">Trang Chủ</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="admin" asp-controller="Product" asp-action="Add"><i class="fa-solid fa-plus"></i>Thêm Sản Phẩm</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="admin" asp-controller="Product" asp-action="Index">Order</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="admin" asp-controller="product" asp-action="Privacy">Edit</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Thể Loại Sách</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
            @* <div class="col-md-3">
                <div class="bg-black text-white p-3">
                    <h5>SOCIAL MEDIA</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" style="color: #ffffff" ;>FACEBOOK</a></li>
                        <li><a href="#" style="color: #ffffff" ;>LINKEDINK</a></li>
                        <li><a href="#" style="color: #ffffff" ;>ZALO</a></li>
                        <li><a href="#" style="color: #ffffff" ;>GMAIL</a></li>
                        <li><a href="#" style="color: #ffffff" ;>GMAIL</a></li>
                        <li><a href="#" style="color: #ffffff" ;>HOÀNG LONG</a></li>
                    </ul>
                </div>
            </div> *@
        </div>

    </div>





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
